{% import 'grid_classes.html.twig' as grid %}

{% if function('is_active_sidebar', 'offcanvas' ) %}
	<div class="offcanvas-sidebar">
		<div class="close-button-wrapper sidebar"><span class="close dashicons dashicons-no"></span></div>
		{{ sidebar.offcanvas }}
	</div>
{% endif %}

<footer class="{{ red|apply_filters('maera/nav/class') }} lighten-2">
	{% do action( 'maera/footer/before', post.ID ) %}
	<div class="page-footer">
		{% do action( 'maera/footer/start', post.ID ) %}
		<div class="container wrap footer-section" id="wrap-footer-section">
			{% do action( 'maera/footer/content' ) %}
			{% if sidebar.header %}
				<div class="{{ grid.row() }}">{{ sidebar.footer }}</div>
			{% endif %}
		</div>
		{% do action( 'maera/footer/end', post.ID ) %}
	</div>
	{% do action( 'maera/footer/after', post.ID ) %}
</footer>
